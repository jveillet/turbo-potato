<section class="create-ride">
  <header>
    <h2 class="create-ride-title">ğŸš— Want a ride?</h2>
  </header>
  <main>
    <div class="ride-form">
      <%= form_for @ride, :html => {:class => "ride-form-new"} do |f| %>
        <p>Departure: <%= f.text_field :from, name: 'from', placeholder: 'from' %></p>
        <p>Destination: <%= f.text_field :to, name: 'to', placeholder: 'to' %></p>

        <%= f.submit 'Save', class: 'btn btn--small' %>&nbsp;or&nbsp;
        <%= link_to 'Cancel', :back, class: 'cancel', data: { confirm: 'Are you sure you want to cancel the ride?' } %>
      <% end %>
  </main>
</section>
